{
  "name": "Invite",
  "plural": "Invites",
  "base": "PersistedModel",
  "properties": {
    "email": "string",
    "role": {
      "type": "string",
      "enum": [
        "admin",
        "editor",
        "author"
      ]
    },
    "status": {
      "type": "string",
      "required": true,
      "enum": [
        "issued",
        "accepted",
        "revoked"
      ],
      "default": "issued"
    },
    "expiresIn": {
      "type": "number",
      "required": true,
      "default": 7
    },
    "token": {
      "type": "string",
      "required": false
    },
    "url": {
      "type": "string",
      "required": false
    },
    "expiresAt": {
      "type": "date",
      "required": false
    },
    "acceptedAt": {
       "type": "date",
      "required": false
    }
  },
  "mixins": {
    "TimeStamp" : true
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
